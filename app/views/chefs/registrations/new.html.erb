<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :avatar %>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field">
    <%= f.label :is_female, "Gender" %>
    <div class="field">
      <%= f.radio_button :is_female, true %> <%= f.label :is_female, "Female" %>
      <%= f.radio_button :is_female, false %> <%= f.label :is_female, "Male" %>
    </div>
  </div>

  <div class="field">
    <%= f.label :phone %><br />
    <%= f.telephone_field :phone %>
  </div>

  <div class="field">
    <%= f.label :address %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :zip_code %><br />
    <%= f.number_field :zip_code %>
  </div>

  <div class="field">
    <%= f.label :date_of_birth %>
    <div class="field">
        <%= f.date_select :date_of_birth, start_year: 1920, end_year: Time.now.strftime("%Y").to_i-18%>
    </div>
  </div>

  <div class="field">
      <%= f.label :specialties %>
      <div class="field">
        <%= f.collection_check_boxes :specialty_ids, Specialty.all, :id, :name do |b| %>
          <%= b.check_box %>
          <%= b.label %>
        <% end %>
      </div>
  </div>

  <div class="field">
    <%= f.label :summary %><br />
    <%= f.text_field :summary %>
  </div>

  <div class="field">
    <%= f.label :image1 %>
    <%= f.file_field :image1 %>
  </div>

  <div class="field">
    <%= f.label :image2 %>
    <%= f.file_field :image2 %>
  </div>

  <div class="field">
    <%= f.label :image3 %>
    <%= f.file_field :image3 %>
  </div>

  <div class="field">
    <%= f.label :image4 %>
    <%= f.file_field :image4 %>
  </div>

  <div class="field">
    <%= f.label :image5 %>
    <%= f.file_field :image5 %>
  </div>

  <div class="field">
    <%= f.label :image6 %>
    <%= f.file_field :image6 %>
  </div>

  <div class="field">
    <%= f.label :image7 %>
    <%= f.file_field :image7 %>
  </div>

  <div class="field">
    <%= f.label :image8 %>
    <%= f.file_field :image8 %>
  </div>

  <div class="field">
    <%= f.label :image9 %>
    <%= f.file_field :image9 %>
  </div>

  <div class="field">
    <%= f.label :image10 %>
    <%= f.file_field :image10 %>
  </div>

  <div class="field">
    <%= f.label :cv %>
    <%= f.file_field :cv %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "chefs/shared/links" %>
