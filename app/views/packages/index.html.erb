<p id="notice"><%= notice %></p>

<h1>Packages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Months</th>
      <th>Services</th>
      <th>Clients max</th>
      <th>Base discount</th>
      <th>Dish discount</th>
      <th>Dishes max</th>
      <th>No dishes max</th>
      <th>Description</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @packages.each do |package| %>
      <tr>
        <td><%= package.name %></td>
        <td><%= package.months %></td>
        <td><%= package.services %></td>
        <td><%= package.clients_max %></td>
        <td><%= package.base_discount %></td>
        <td><%= package.dish_discount %></td>
        <td><%= package.dishes_max %></td>
        <td><%= package.no_dishes_max %></td>
        <td><%= package.description %></td>
        <td><%= package.price %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

